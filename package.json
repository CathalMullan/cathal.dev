    "start": "next start",
    "lint": "next lint",
    "fmt": "pnpm prettier --write .",
    "fmt-ci": "pnpm prettier ."
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "4.5.9",
    "@heroicons/react": "1.0.6",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@types/node": "17.0.42",
